# MoP Inscription Deck Tracker Environment Configuration
# Copy this file to .env and configure your settings

# Server Configuration
PORT=5000
NODE_ENV=production
HOST=0.0.0.0

# Security Configuration
# JWT Secret (CHANGE THIS TO A SECURE RANDOM STRING)
# Generate with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# CORS Configuration
# Set this to your production domain(s), comma-separated
FRONTEND_URL=https://your-production-domain.com

# Rate Limiting Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Database Configuration
DB_PATH=./cards.db

# Future PostgreSQL Configuration (for migration)
# DB_HOST=localhost
# DB_PORT=5432
# DB_NAME=cardtracker_prod
# DB_USER=cardtracker_user
# DB_PASSWORD=your-secure-database-password

# Discord Integration (Optional)
DISCORD_WEBHOOK_URL=

# Gotify Configuration (Optional)
GOTIFY_SERVER=
GOTIFY_TOKEN=

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=/var/log/cardtracker/

# Default Admin Configuration
DEFAULT_ADMIN_USERNAME=admin
DEFAULT_ADMIN_PASSWORD=admin123

# File Upload Limits
MAX_JSON_SIZE=10mb

# HTTPS Configuration (if using HTTPS directly in Node.js)
# HTTPS_ENABLED=false
# SSL_CERT_PATH=/path/to/ssl/cert.pem
# SSL_KEY_PATH=/path/to/ssl/private.key

# Gotify Configuration (Optional - Global defaults)
GOTIFY_SERVER_URL=
GOTIFY_APP_TOKEN=

# Update System Configuration
AUTO_UPDATE_ENABLED=true
UPDATE_CHECK_INTERVAL=86400000
BACKUP_RETENTION_DAYS=7

# Security Configuration
SESSION_TIMEOUT=86400000
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900000

# Logging Configuration
LOG_LEVEL=info
LOG_TO_FILE=true
