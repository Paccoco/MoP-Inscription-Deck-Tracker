# Environment Configuration for MoP Inscription Deck Tracker
# Docker Compose Environment Variables

#==============================================================================
# Application Configuration
#==============================================================================
APP_PORT=5000
HTTP_PORT=80
HTTPS_PORT=443
DATA_PATH=./data

#==============================================================================
# Database Configuration
#==============================================================================
DB_NAME=mop_card_tracker
DB_USER=mop_tracker_app
DB_PASSWORD=secure_password_change_this_in_production_123
DB_PORT=5432

#==============================================================================
# JWT Security Configuration
#==============================================================================
JWT_SECRET=your-super-secure-jwt-secret-minimum-32-characters-change-this
JWT_REFRESH_SECRET=your-refresh-token-secret-different-from-jwt-change-this
JWT_EXPIRATION=1h
JWT_REFRESH_EXPIRATION=7d

#==============================================================================
# Security Configuration
#==============================================================================
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

#==============================================================================
# Notification Configuration
#==============================================================================
DISCORD_WEBHOOK_URL=
DISCORD_ENABLE=false
GOTIFY_DEFAULT_SERVER=
GOTIFY_ADMIN_TOKEN=

#==============================================================================
# Performance Configuration
#==============================================================================
CACHE_TTL=300
ENABLE_PERFORMANCE_MONITORING=true
LOG_LEVEL=info

#==============================================================================
# Development Configuration (uncomment for development)
#==============================================================================
# NODE_ENV=development
# LOG_LEVEL=debug
# ENABLE_PERFORMANCE_MONITORING=false
